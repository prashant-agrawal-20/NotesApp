{
  "name": "NotesApp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json && pnpm copy-configs && pnpm tslint",
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy-configs": "mkdir -p dist/conf/; cp src/conf/*.json dist/conf/;",
    "clean": "rm -rf dist && mkdir -p dist",
    "serve": "APP_NAME=NotesApp node dist/index.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "prepare": "husky install",
    "prettify": "pnpm prettier src/ --write",
    "start-dev": "pnpm clean && APP_ENV=LOCAL ENVIRONMENT=LOCAL pnpm build && APP_NAME=NotesApp APP_ENV=LOCAL ENVIRONMENT=LOCAL node dist/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-limiter": "^1.6.1",
    "inversify": "^6.0.2",
    "inversify-express-utils": "6.3.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "lodash": "^4.17.21",
    "body-parser": "^1.20.2",
    "express-rate-limit": "^7.1.5",
    "reflect-metadata": "^0.2.1",
    "mkdirp": "^3.0.1"
  },
  "devDependencies": {
    "typescript": "5.3.3",
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "@types/body-parser": "^1.19.5",
    "tslint": "^6.1.3",
    "husky": "^8.0.3",
    "prettier": "3.1.1"
  },
